{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@yume-ui/primitives": ["../../packages/primitives/src"],
      "@yume-ui/primitives/*": ["../../packages/primitives/src/*"],
      "@yume-ui/ui": ["../../packages/ui/src"],
      "@yume-ui/ui/*": ["../../packages/ui/src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
